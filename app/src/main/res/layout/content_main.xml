<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.why.contentprovidersdp.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/content_main"
        app:layout_constraintTop_toTopOf="@+id/content_main"
        android:layout_marginTop="57dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="148dp"
            android:id="@+id/editTextName" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Grade"
            android:ems="10"
            android:id="@+id/editTextGrade" />

        <Button
            android:text="Add Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAddName" />

        <Button
            android:text="Retrieve Student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRetrieveStudent" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
